@using static SpeedDating.Web.Helpers.NavigationInidicatorHelper;
@inject IWorkContext workContext

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="~/images/apfelITlogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/lib/AdminLTE/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@workContext.CurrentUser.Email</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                <li class="nav-item has-treeview @Url.MakeMenuTreeActive("Event")">
                    <a href="#" class="nav-link @Url.MakeActiveClass("Event")">
                        <i class="nav-icon fa fa-calendar"></i>
                        <p>
                            Události
                            <i class="right fa fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@Url.Action("Create","Event",new { Area = Constants.Areas.Admin})" class="nav-link @Url.MakeActiveClass("Event","Create")">
                                <i class="fa fa-plus-circle nav-icon"></i>
                                <p>Nová událost</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fa fa-circle nav-icon"></i>
                                <p>Všechny události</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item has-treeview @Url.MakeMenuTreeActive("EventCategory")">
                    <a href="#" class="nav-link @Url.MakeActiveClass("EventCategory")">
                        <i class="nav-icon fa fa-list-alt"></i>
                        <p>
                            Kategorie
                            <i class="right fa fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@Url.Action("Create","EventCategory",new { Area = Constants.Areas.Admin})" class="nav-link @Url.MakeActiveClass("EventCategory","Create")">
                                <i class="fa fa-plus-circle nav-icon"></i>
                                <p>Nová kategorie</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fa fa-circle nav-icon"></i>
                                <p>Všechny kategorie</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item has-treeview @Url.MakeMenuTreeActive("EventAttribute")">
                    <a href="#" class="nav-link @Url.MakeActiveClass("EventAttribute")">
                        <i class="nav-icon fa fa-th-large"></i>
                        <p>
                             Možnosti události
                            <i class="right fa fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@Url.Action("Create","EventAttribute",new { Area = Constants.Areas.Admin})" class="nav-link @Url.MakeActiveClass("EventAttribute","Create")">
                                <i class="fa fa-plus-circle nav-icon"></i>
                                <p>Nová možnost</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fa fa-circle nav-icon"></i>
                                <p>Všechny možnosti</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Simple Link
                            <span class="right badge badge-danger">New</span>
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
