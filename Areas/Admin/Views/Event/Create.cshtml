@model EventModel
@using SpeedDating.Web.Areas.Admin.Models.Event
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Nová událost</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <button class="btn btn-primary" id="save-event-btn">Uložit</button>
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("User","Dashboard", new { Area = Constants.Areas.Admin})">Home</a></li>
                    <li class="breadcrumb-item active">Události</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<script>

    $('#save-event-btn').click(function () {
        SaveEvent();
    });

    function SaveEvent() {
        $('#event-details').submit();
    }

</script>

<form asp-action="Create" asp-controller="Event" method="post" id="event-details">
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>

